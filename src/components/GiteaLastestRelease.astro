---
const response = await fetch('https://dev.lab/api/v1/repos/kryptos/test/releases/latest?token=a4cff11047341dc973f3c08cdb08e64b856c084c');
const data = await response.json();
const release = data;
---

<!-- Data fetched at build can be rendered in HTML -->
<h2>Test</h2>
<p class="metadata">Created : {release.created_at} // Published : {release.published_at}</p>
<h3>{release.name} {release.body}</h3>



<style>
    .metadata{
        font-size: small;
        line-height: 0%;
    }
</style>