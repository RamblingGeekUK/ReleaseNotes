---
import { markdown } from '@astropub/md'

const {repo} = Astro.props;
const response = await fetch(`https://hq-dev-01.vstrading.co.uk/api/v1/repos/VST/${repo}/releases/latest?token=${import.meta.env.GITEA_TOKEN}`);
const data = await response.json();
const release = data;
---

<!-- Data fetched at build can be rendered in HTML -->
<h2>{repo}</h2>
<p class="metadata">Created : {release.created_at} // Published : {release.published_at}</p>

<h3>{release.name}</h3>
{await markdown(`${release.body}`)}

<style>
    .metadata{
        font-size: small;
        line-height: 0%;
    }
</style>